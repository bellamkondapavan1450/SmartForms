<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="searchView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="queryBackground">@null</item>
        <item name="searchIcon">@null</item>
        <item name="iconifiedByDefault">false</item>
        <item name="queryHint">Search...</item>
    </style>

    <style name="ShapeAppearanceOverlayExtended" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>
    </style>

    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxCornerRadiusTopStart">12dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
        <item name="boxCornerRadiusBottomStart">12dp</item>
        <item name="boxCornerRadiusBottomEnd">12dp</item>
        <item name="endIconTint">@color/app_color</item>
        <item name="startIconTint">@color/app_color</item>
        <item name="boxStrokeColor">@color/app_color</item>
        <item name="colorAccent">@color/app_color</item>
        <item name="hintTextColor">@color/app_color</item>
        <item name="android:textColorHint">#990A1931</item>
    </style>

</resources>